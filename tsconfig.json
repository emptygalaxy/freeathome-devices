{
  "compilerOptions": {
    "module": "commonjs",
    "target": "ES2018",
    "lib": [
      "es2015",
      "es2016",
      "es2017",
      "es2018"
    ],
    "sourceMap": true,
    "strict": true,
    "rootDir": "src",
    "resolveJsonModule": true,
    "outDir": "dist",
    "declaration": true
  },
  "exclude": [
    "node_modules"
  ],
  "include":  [
    "src"
  ]
}